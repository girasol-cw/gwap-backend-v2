{
  "name": "gwap-backend-v2",
  "version": "0.0.1",
  "description": "GWAP Topup Backend Infrastructure",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "start:api": "nest start api",
    "start:wallet-service": "nest start wallet-service",
    "start:deposit": "nest start deposit",
    "start:dev:api": "nest start api --watch",
    "start:dev:wallet-service": "nest start wallet-service --watch",
    "start:dev:deposit": "nest start deposit --watch",
    "build:api": "nest build api",
    "build:wallet-service": "nest build wallet-service",
    "build:deposit": "nest build deposit"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@safe-global/protocol-kit": "^3.1.1",
    "@safe-global/safe-core-sdk-types": "^5.1.0",
    "alchemy-sdk": "^3.6.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.14.4",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.1",
    "pg-format": "^1.0.4",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^libs/(.*)$": "<rootDir>/libs/$1",
      "^apps/(.*)$": "<rootDir>/apps/$1"
    }
  }
}
